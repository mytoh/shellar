#!/bin/sh

## plugins
plugins() {
    local pls=${shellar_plugins_path}/*

    printf "available plugins: "
    for pl in ${pls}
    do
        local p="${pl##*/}"
        if contains "${p}" "${shellar_plugins}"
        then
            printf "[38;5;99m%s[0m " ${p}
        else
            printf "%s " ${p}
        fi
    done
    printf "\n"
}

contains() {
    local elem="${1}"
    local list="${2}"
    local flag=1
    IFS=":"
    for e in ${list}; do
        if test "${e}" = "${elem}"
        then
            flag=0
        fi
    done
    return ${flag}
}


plugins
