# -*- shell-script -*-

source $shellar/shellar/lib.mksh


for config in $mksh_lib_dir/*.mksh; do
  if [[ -e $config ]]; then
    source $config
  fi
done

for plugin in $shellar_plugins; do
  if [[ -e $shellar_plugin_dir/$plugin/init.mksh ]]; then
    source $shellar_plugin_dir/$plugin/init.mksh
  fi
done


if [[ -n $shellar_theme ]]; then
  source $shellar_theme_dir/$shellar_theme/$shellar_theme.theme.mksh
else
  source $shellar_theme_dir/default/default.theme.mksh
fi


