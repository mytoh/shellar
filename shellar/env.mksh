
## global variables
if test -z ${shellar}
then
    export shellar="${HOME}/.shellar"
fi
export shellar_bin_dir=${shellar}/bin
export shellar_lib_dir=${shellar}/lib
export shellar_plugins_dir=${shellar}/plugins
export shellar_themes_dir=${shellar}/themes

## custom
if test -z ${shellar_custom}
then
    export shellar_custom=${HOME}/.shellar_custom
fi
export shellar_custom_plugins_dir=${shellar_custom}/plugins

## shellar script
export PATH=${shellar_bin_dir}:${PATH}
